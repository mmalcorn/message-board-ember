{{#if addNewQuestion}}
<h2>Submit a new question</h2>
<div>
  <form>
    <div class="form-group">
      <label for="question-input">Type the question you're itching to have answered below:</label>
      {{input value=question-input id=question-input}}
    </div>

    <div class="form-group">
      <label for="question-author">Enter your name:</label>
      {{input value=question-author id=question-author}}
    </div>

    <div class="form-group">
      <label for="additional-info">Other information that may help the answerer:</label>
      {{input value=additional-info id=additional-info}}
    </div>

    <button {{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
