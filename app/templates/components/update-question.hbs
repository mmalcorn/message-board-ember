<div class=container>
  {{#if updateQuestionForm}}
    <h3>Update your question:</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="question-input">Type the question you're itching to have answered below:</label>
          {{input value=question-input id=question-input placeholder=question.question}}
        </div>

        <div class="form-group">
          <label for="question-author">Enter your name:</label>
          {{input value=question-author id=question-author placeholder=question.questionAuthor}}
        </div>

        <div class="form-group">
          <label for="additional-info">Other information that may help the answerer:</label>
          {{input value=additional-info id=additional-info placeholder=question.additionalInfo}}
        </div>

        <button class="btn btn-primary" {{action 'update' question}}>Save</button>
      </form>
    </div>
  {{else}}
    <button class="btn btn-warning" {{action 'updateQuestionForm'}}>Update Question</button>
  {{/if}}
</div>
